{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Sync (hard lint-safe)",
            "type": "shell",
            "command": "npm",
            "args": [
                "run",
                "sync:hard"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": []
        },
        {
            "label": "Sync (normal)",
            "type": "shell",
            "command": "npm",
            "args": [
                "run",
                "sync"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": []
        },
        {
            "label": "Sync Watch (hard lint-safe)",
            "type": "shell",
            "command": "npm",
            "args": [
                "run",
                "sync:watch"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "isBackground": true,
            "problemMatcher": []
        },
        {
            "label": "Run runner (ExampleTransform)",
            "type": "shell",
            "command": "node",
            "args": [
                "index.js",
                "--name",
                "ExampleTransform - Transform",
                "--input",
                "data/sample.json"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": []
        }
    ]
}